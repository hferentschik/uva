<div id="main" class="clearfix">
<div id="content">
  <h1>New dog</h1>

  <% form_for( @dog, :url => {:action => "create"} ) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :gender %><br />
      <%= f.select :gender, [['Hembra', 'f'], ['Macho', 'm']] %>
    </p>
    <p>
      <%= f.label :age %><br />
      <%= f.select :age, Dog.possible_ages %>
    </p>
    <p>
      <%= f.label :asset, 'Picture:' %><br />
      <%= collection_select :dog, :asset_id, Asset.all, :id, :asset_file_name %>
    </p>
    <p>
      <%= f.label :size %><br />
      <%= f.select :size, [['PequeÃ±o', 's'], ['Mediano', 'm'], ['Largo', 'l']] %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>

  <%= link_to 'Back', dogs_path %>
</div>
</div>