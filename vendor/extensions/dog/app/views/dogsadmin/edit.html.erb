<h1>
  Editing dog
</h1>

<% form_for(@dog , :url => {:action => @action} ) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :gender %><br />
    <%= f.select :gender, Dog.possible_genders %>
  </p>
  <p>
    <%= f.label :age %><br />
    <%= f.select :age, Dog.possible_ages %>
  </p>
  <p>
    <%= f.label :asset, 'Picture:' %><br />
    <%= collection_select :dog, :asset_id, Asset.all, :id, :asset_file_name %>
  </p>
  <p>
    <%= f.label :size %><br />
    <%= f.select :size, Dog.possible_sizes %>
  </p>
  
  <% if @action == 'update' %>
  <p>
    <%= f.label :adopted %>
    <%= f.check_box :adopted %>
  </p>
  <% end %>
  
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit @action.capitalize %>
  </p>
<% end %>

<%= link_to 'Show', '/dogsadmin/' + @dog.id.to_s  %> |
<%= link_to 'Back', '/dogsadmin' %>