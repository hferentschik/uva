<h1>Editing dog</h1>

<% form_for(@dog , :url => {:action => "update"} ) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :gender %><br />
    <%= f.select :gender, [['Hembra', 'F'], ['Macho', 'M']] %>
  </p>
  <p>
    <%= f.label :age %><br />
    <%= f.select :age, Dog.possible_ages %>
  </p>
  <p>
    <%= f.label :asset, 'Picture:' %><br />
    <%= collection_select :dog, :asset_id, Asset.all, :id, :asset_file_name %>
  </p>
  <p>
    <%= f.label :size %><br />
    <%= f.select :size, [['PequeÃ±o', 'S'], ['Mediano', 'M'], ['Largo', 'L']] %>
  </p>
  <p>
    <%= f.label :adopted %>
    <%= f.check_box :adopted %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

