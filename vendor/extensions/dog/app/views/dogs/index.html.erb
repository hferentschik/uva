    <div id="content">
        <h1>Adoptame</h1>
        <div id="formwrapper">
            <form action="post">
                <select name="gender">
                    <option>Select gender</option>
                </select>
                <select name="age">
                    <option>Select age</option>
                </select>
                <select name="breed">
                    <option>Select size</option>
                </select>
                <input name="submit" type="button" value="Filter" class="submitbutton" />
            </form>
        </div><% @dogs.each do |dog| %>
        <div class="entry">
            <h2><%=h dog.name %></h2>
            <%= image_tag dog.picture_file_name, :width => '100', :class => 'alignleft' %>
            <p>
                <%=h dog.description %>
            </p>
            <p class="posted">
            Posted on <%=h dog.created_at %>  <span>|</span>
            <%=h dog.age %>| <%=h dog.long_gender %>| <%= dog.long_size %>
        </div>
        <% end %>
    </div>
