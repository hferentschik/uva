<h1>Adoptame</h1>
<div id="formwrapper">
    <form action="post">
        <select name="gender">
            <option>Select gender</option>
        </select>
        <select name="age">
            <option>Select age</option>
        </select>
        <select name="breed">
            <option>Select size</option>
        </select>
        <input name="submit" type="button" value="Filter" class="submitbutton" />
    </form>
</div><% @dogs.each do |dog| %>
<div class="entry">
    <h2><%=h dog.name %></h2>
    <table>
        <tr>
            <td>
                <a href="/images/<%= dog.picture_file_name %>" rel="lightbox" title="<%= dog.name %>"><%= image_tag dog.picture_file_name_list, :width => '100', :class => 'alignleft', :alt => dog.name %></a>
            </td>
            <td valign="top">
                <p>
                    <%=h dog.description %>
                </p>
            </td>
        </tr>
    </table>
    <p class="posted">
    Posted on <%=h dog.created_at.strftime("%m/%d/%Y") %><span>|</span>
    <%=h dog.age %>| <%=h dog.long_gender %>| <%= dog.long_size %>
</div>
<% end %>
