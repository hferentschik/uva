<div id="main" class="clearfix">
<div id="content">

<table>

<% @dogs.each do |dog| %>
  <tr>
    <td><%= image_tag dog.picture_file_name, :width => '100' %></td>
    <td>
      <%=h dog.name %><br/>
      AGE <%=h dog.age%> | GENDER <%=h dog.long_gender %> | SIZE <%= dog.long_size %><br/>
      <%=h dog.description %>
    </td>
    <td><%= link_to 'Show', dog %></td>
    <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
    <td><%= link_to 'Destroy', dog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New dog', new_dog_path %>

</div>
</div>